<%- include("partials/header") %>

<main class="container py-4">

    <h1>Thèmes</h1>
  
    <div>

      <% tags.forEach(tag => { %>

        <span class="badge bg-primary p-2 mb-1"><%= tag.name %></span> <!--  Titre -->

        <% if (tag.Quizzes.length > 0) { %>

            <ul>
                <% tag.Quizzes.forEach(quizz => { %>
                    <li><a href="/quizz/<%= quizz.id %>"><%= quizz.title %></a></li>
                <% }) %>
            </ul>
         
        <% } else { %>

            <p class="ms-2">Aucun quizz dans cette catégorie pour le moment....</p>

        <% } %>
     
      <% }) %>
    
    </div>
  
  </main>
  
  <%- include("partials/footer") %>