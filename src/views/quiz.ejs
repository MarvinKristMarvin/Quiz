<%- include("partials/header") %>

<main class="container py-4">

  <h1 class="text-center m-2"><%= quizz.title %></h1> <!--Titre-->

  <h2 class="text-center m-2"><%= quizz.description %></h1> <!--Description-->

  <h2 class="small text-end"><%= quizz.author.firstname %> <%= quizz.author.lastname %></h2> <!--Auteur-->

  <h2 class="small text-end">Date de création : <%= dayjs(quizz.createdAt).locale("fr").format("dddd D MMMM YYYY") %></h2> <!--Date-->

  <h3>Thèmes</h3>
  <ul class="mb-4 p-0">
    <% quizz.Tags.forEach(tag => { %> <!-- Catégories / Tags -->
      <li class="badge bg-primary"><%= tag.name %></li>
     <% }) %>
  </ul>

  <h3>Questions</h3>
    <% quizz.Questions.forEach(question => { %>
      <span class="badge bg-info"><%= question.Level.name %></span>
      <p class="fw-bold mb-1"><%= question.description %></p>
      <div class="mb-3 ms-2">
        <% question.Answers.forEach(answer => { %>
          <div>
            <input type="radio" id="#" name="#" value="#">
            <label for="#"><%= answer.description %></label>
          </div>
         <% }) %>
      </div>
      <p class="fst-italic text-secondary"><%= question.anecdote %></p>
    <% }) %>
    
  
  <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>
</main>

<%- include("partials/footer") %>
